@model Fatec.Mvc.Models.VerifyPhoneNumberViewModel
@{
    ViewBag.Title = "Verificar número de telefone";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("VerifyPhoneNumber", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", onsubmit = "loader()" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("phoneNumber", @Model.PhoneNumber)
    <h4>Digite o código de verificação</h4>
    <h5>@ViewBag.Status</h5>

    <div class="input-field col s12 m12 l12 xl12 center">
        @Html.LabelFor(m => m.Code, new { @class = "validate" })
        @Html.PasswordFor(m => m.Code, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Code, "", new { @class = "helper-text" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Enviar" />
        </div>
    </div>
}
@using Fatec.Application.ViewModels;

@model PermissaoViewModel
@{
    ViewBag.Title = "Permissões";
}

<div>
    <h3 class="center">Editar Usuário</h3>
</div>

@using (Html.BeginForm("Edit", "Permissao", FormMethod.Post, new { @class = "form-horizontal", role = "form", onsubmit = "loader()" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="input-field col s12 m12 l6 xl6 center">
            @Html.TextBoxFor(m => m.IdUsuario, new { @class = "form-control", disabled = "disabled" })
            @Html.LabelFor(m => m.IdUsuario, new { @class = "validate" })
            @Html.HiddenFor(m => m.IdUsuario)
        </div>
        <div class="input-field col s12 m12 l6 xl6 center">
            @Html.TextBoxFor(m => m.NomeUsuario, new { @class = "form-control", disabled = "disabled" })
            @Html.LabelFor(m => m.NomeUsuario, new { @class = "validate" })
            @Html.HiddenFor(m => m.NomeUsuario)
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12 m12 l6 xl6 center">
            @Html.TextBoxFor(m => m.EmailUsuario, new { @class = "form-control", disabled = "disabled" })
            @Html.LabelFor(m => m.EmailUsuario, new { @class = "validate" })
            @Html.HiddenFor(m => m.EmailUsuario)
        </div>
        <div class="input-field col s12 m12 l6 xl6 center">
            @Html.DropDownListFor(m => m.Role, new SelectList(ViewBag.Roles, "Id", "Descricao", "Selecione a Função"), "Selecione a Função", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Role, "", new { @class = "helper-text" })
        </div>
    </div>

    <br />

    <div class="row center">
        <div class="col s12 m12 l12 xl12 center">
            <input class="btn teal-2 waves-light" type="submit" value="Alterar" />
            <a class="btn yellow accent-3 waves-light black-text" onclick="loaderLink('@Url.Action("Index","Permissao")')" value="Cancelar">Cancelar</a>
        </div>
    </div>

}

<script type="text/javascript">
    document.addEventListener('DOMContentLoaded', function () {
        const elems = document.querySelectorAll('select');
        const options = {};
        M.FormSelect.init(elems, options);
    });
</script>

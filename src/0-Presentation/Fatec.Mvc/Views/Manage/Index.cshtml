@model Fatec.Mvc.Models.IndexViewModel
@{
    ViewBag.Title = "Gerenciar";
}
<br />

<div class="center-align">
    <h3 class="">Alterar as configurações de conta</h3>
</div>

<div>
    <br />

    <div class="row">
        <div class="col s12 m6">
            <div class="card white z-depth-2">
                <div class="card-content black-text">
                    <span class="card-title">Senha: ********</span>
                    <p><a class="btn waves-effect waves-light red accent-2 z-depth-2" href="#" onclick="loaderLink('@Url.Action("ChangePassword", "Manage")')" value="Alterar Senha">Alterar sua Senha</a></p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m6">
            <div class="card white z-depth-2">
                <div class="card-content black-text">
                    <span class="card-title">Serviços Logins externos: @Model.Logins.Count</span>
                    <p><a class="btn waves-effect waves-light red accent-2 z-depth-2" href="#" onclick="loaderLink('@Url.Action("ManageLogins", "Manage")')" value="Logins Externos">Gerenciar Logins Externos</a></p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m6">
            <div class="card white z-depth-2">
                <div class="card-content black-text">
                    <span class="card-title">Número de Telefone: @(Model.PhoneNumber ?? "Nenhum")</span>
                    <p align="justify">Os Números de Telefone podem ser usados como um segundo fator de verificação em um sistema de autenticação de dois fatores usando SMS.</p>
                    <br />
                    @if (Model.PhoneNumber != null)
                    {
                        @Html.ActionLink("Change", "AddPhoneNumber")
                        using (Html.BeginForm("RemovePhoneNumber", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", onsubmit = "loader()" }))
                        {
                            @Html.AntiForgeryToken()
                            <input type="submit" value="Remover" class="btn waves-effect waves-light red accent-2 z-depth-2" />
                        }
                    }
                    else
                    {
                        <a class="btn waves-effect waves-light red accent-2 z-depth-2" onclick="loaderLink('@Url.Action("AddPhoneNumber","Manage")')" value="Adicionar">Adicionar</a>
                    }
                </div>
            </div>
        </div>
    </div>


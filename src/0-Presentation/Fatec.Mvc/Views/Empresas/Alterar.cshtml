@using Fatec.Application.ViewModels;
@model EmpresaViewModel
<div class="row">
    
    <div class="col s12 m12 l12 xl12">

        <div class="col s12 m12 l12 xl12 center">
            <h2>@ViewBag.Title</h2>
        </div>

        @using (Html.BeginForm("Alterar", "Empresas", FormMethod.Post, new { @class = "form-horizontal", role = "form", onsubmit = "loader()" }))
        {
            @Html.AntiForgeryToken()
            <div class="col s12 m12 l12 xl12 center">
                <h4>Alterar Cadastro da Empresa.</h4>
            </div>

            <div class="input-field col s12 m12 l12 xl12 center">
                @Html.LabelFor(m => m.Id, new { @class = "validate" })
                @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div class="input-field col s12 m12 l12 xl12 center">
                @Html.LabelFor(m => m.Nome, new { @class = "validate" })
                @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "helper-text" })
            </div>

            <div class="input-field col s12 m12 l12 xl12 center">
                @Html.LabelFor(m => m.Email, new { @class = "validate" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "helper-text" })
            </div>

            <div class="input-field col s12 m12 l12 xl12 center">
                @Html.LabelFor(m => m.Telefone, new { @class = "validate" })
                @Html.TextBoxFor(m => m.Telefone, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Telefone, "", new { @class = "helper-text" })
            </div>

            <div class="input-field col s12 m12 l12 xl12 center">
                @Html.LabelFor(m => m.UrlSite, new { @class = "validate" })
                @Html.TextBoxFor(m => m.UrlSite, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UrlSite, "", new { @class = "helper-text" })
            </div>

            <div class="input-field col s12 m12 l12 xl12 center">
                @Html.LabelFor(m => m.DataCadastro, new { @class = "validate" })
                @Html.TextBoxFor(m => m.DataCadastro, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div class="col s12 m12 l12 xl12 center">
                <input type="submit" class="btn teal-2 waves-light" value="Alterar" />
                <a class="btn yellow accent-3 black-text waves-light" href="#" onclick="loaderLink('@Url.Action("Cadastro","Empresas")')" >Cancelar</a>
            </div>
        }
    </div>
        </div>